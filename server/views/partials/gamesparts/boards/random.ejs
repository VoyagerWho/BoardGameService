    function rollDices<%= locals.index %> (dices) {
        const diceSpace = document.getElementById("board:<%= locals.index%>").getElementsByClassName("diceSpace")[0];
        var counter = 0;
        const id = setInterval(() => {
            if (counter < dices[0].length) {
                dices.forEach((faces, index) => {
                    diceSpace.getElementsByClassName("dice")[index].innerHTML = faces[counter];
                });
                ++counter;
            }
            else
                clearInterval(id);
        }, 50);
    }
</script>
