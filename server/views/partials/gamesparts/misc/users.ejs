<div id="playersList">
    <div>
        <b>
            <% if (locals.uid> 0) { %>
                Jesteś Graczem <%= locals.uid %>
                    <% } else { %>
                        Jesteś Obserwatorem
                        <% } %>
        </b>
        <br /><b>Stan połączenia: </b>
        <div id="wsIndicator" onclick="location.reload()"></div>
    </div>
    <br /><br /><b>Członkowie:</b>
    <ul>
        <li>Gracze:
            <ul>
                <% locals.room.players.forEach((element, index)=> { %>
                    <% if (element) { %>
                        <li>
                            <% if (element.username) { %>
                                <%= element.username %>
                                    <% } else {%>
                                        Gracz<%= index %>
                                            <%= locals.uid===index ? '(Ty)' : '' %>
                                                <% } %>
                                                    <% if (element.session.rooms[rid].roomHost) { %>
                                                        [Gospodarz]
                                                        <% } %>
                        </li>
                        <% } %>
                            <% }) %>
            </ul>
        </li>
        <li>Obserwatorzy:
            <ul>
                <% locals.room.observers.forEach((element, index)=> { %>
                    <% if (element) { %>
                        <li>
                            <% if (element.username) { %>
                                <%= element.username %>
                                    <% } else {%>
                                        Obserwator<%= index+1 %>
                                            <%= locals.oid===index ? '(Ty)' : '' %>
                                                <% } %>
                                                    <% if (element.session.rooms[rid].roomHost) { %>
                                                        [Gospodarz]
                                                        <% } %>
                        </li>
                        <% } %>
                            <% }) %>
            </ul>
        </li>
    </ul>
</div>